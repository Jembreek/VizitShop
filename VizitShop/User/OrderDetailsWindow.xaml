<Window x:Class="VizitShop.OrderDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Детали заказа"
        Height="600"
        Width="800"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterOwner">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#333333"/>
        </Style>

        <Style TargetType="Border">
            <Setter Property="CornerRadius" Value="4"/>
        </Style>

        <Style x:Key="CloseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#666"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Margin="10" CornerRadius="8" Background="#FFF5F5F5" BorderThickness="0">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.3"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" 
                    Background="#7C4DFF" 
                    CornerRadius="8,8,0,0"
                    MouseLeftButtonDown="DragWindow">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="40"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Детали заказа" 
                               Foreground="White"
                               FontSize="16"
                               VerticalAlignment="Center"
                               Margin="15,0"/>

                    <Button Content="✕"
                                Background="Transparent"
                                Foreground="White"
                                FontSize="18"
                                FontWeight="SemiBold"
                                BorderThickness="0"
                                Click="CloseButton_Click"
                                Cursor="Hand" Grid.Column="1"/>
                </Grid>
            </Border>

            <Border Grid.Row="1" 
                    Background="White" 
                    Padding="15"
                    Margin="10,0,10,10">
                <StackPanel>
                    <TextBlock Text="{Binding CurrentOrder.OrderId, StringFormat='Заказ №{0}'}" 
                              FontSize="18" 
                              FontWeight="SemiBold"
                              Foreground="#FF5722"/>

                    <Grid Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Дата заказа:" 
                                       Foreground="#757575"
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="{Binding CurrentOrder.OrderDate, StringFormat='dd.MM.yyyy HH:mm'}" 
                                       FontWeight="Medium"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2" HorizontalAlignment="Right">
                            <TextBlock Text="Сумма заказа:" 
                                       Foreground="#757575"
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="{Binding CurrentOrder.TotalAmount, StringFormat='{}{0:N0} ₽'}" 
                                       FontWeight="SemiBold"
                                       FontSize="16"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>
            
            <Border Grid.Row="2" 
                    Background="White" 
                    Padding="0"
                    Margin="10,0,10,10">
                <DataGrid ItemsSource="{Binding OrderItems}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          CanUserAddRows="False"
                          HeadersVisibility="Column"
                          BorderThickness="0"
                          GridLinesVisibility="None"
                          RowBackground="Transparent"
                          AlternatingRowBackground="#FAFAFA"
                          ScrollViewer.CanContentScroll="True"
                          ScrollViewer.VerticalScrollBarVisibility="Auto">

                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="Товар" Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid Margin="10,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Border Width="60" Height="60" Background="#EEE">
                                            <Image Source="{Binding ImagePath}" 
                                                   Stretch="UniformToFill"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                        </Border>

                                        <StackPanel Grid.Column="1" Margin="10,0,0,0" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Brand}" 
                                                       FontWeight="SemiBold"
                                                       FontSize="14"/>
                                            <TextBlock Text="{Binding ProductName}" 
                                                       Foreground="#616161"
                                                       Margin="0,2,0,0"/>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTextColumn Header="Цена" 
                                          Binding="{Binding Price, StringFormat='{}{0:N0} ₽'}"
                                          Width="Auto"/>

                        <DataGridTextColumn Header="Кол-во" 
                                          Binding="{Binding Quantity}"
                                          Width="Auto"/>

                        <DataGridTextColumn Header="Сумма" 
                                          Binding="{Binding Total, StringFormat='{}{0:N0} ₽'}"
                                          Width="Auto"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <Border Grid.Row="3" 
                    Background="#7C4DFF" 
                    Padding="15"
                    Margin="10,0,10,10"
                    CornerRadius="0,0,8,8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Path Data="M12,2L15.09,8.26L22,9.27L17,14.14L18.18,21.02L12,17.77L5.82,21.02L7,14.14L2,9.27L8.91,8.26L12,2Z" 
                              Fill="White"
                              Width="20"
                              Height="20"
                              Margin="0,0,10,0"
                              Stretch="Uniform"/>

                        <TextBlock Text="Спасибо за заказ!" 
                                   Foreground="White"
                                   FontSize="14"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <TextBlock Text="Итого к оплате:" 
                                   Foreground="White"
                                   FontSize="16"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding CurrentOrder.TotalAmount, StringFormat='{}{0:N0} ₽'}" 
                                   Foreground="White"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Margin="10,0,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>